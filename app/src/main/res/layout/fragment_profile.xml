<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgprofile"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bgtopbar">

        <ImageButton
            android:id="@+id/img_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Thông tin"
            android:textColor="@color/colorNavText"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/sizeTitle"/>

    </android.support.constraint.ConstraintLayout>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_profile"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:textColor="@color/colorNavText"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Và Tên"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorNavText"
            android:layout_margin="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_user_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emai của người dùng"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorNavText"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:text="Version : 1.0.0"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_margin="20dp" />

        <ImageView
            android:id="@+id/imgView_GG"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/buttongg" />

        <Button
            android:id="@+id/buttonSignout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBarGG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonBlank"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Go to blank" />


    </LinearLayout>

</LinearLayout>
