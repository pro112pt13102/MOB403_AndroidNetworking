<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmota"
    tools:context=".MotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civHinhTruyen"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:elevation="10dp"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:cardCornerRadius="0dp">
                        <ImageButton
                            android:id="@+id/img_btn_back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_back_arrow"
                            android:backgroundTint="#999"
                            />

                        <ImageView
                            android:alpha="0.2"
                            android:id="@+id/img_hinhsp_chitiet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="@drawable/doremon"
                            android:scaleType="fitXY" />
                    </android.support.v7.widget.CardView>

                </android.support.constraint.ConstraintLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_TieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên Truyện"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        />
</LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvTen_tac_gia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Tên tác giả :"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvTen_tacgia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Thức Vương"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvThe_loai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Thể loại :"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvTheloai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Hài hước, tình cảm"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTrang_thai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Trạng thái :"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvTrangthai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Full"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSo_chuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Số chương :"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvSochuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="45/45"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:textColor="#ffffff">

                    <TextView
                        android:id="@+id/tvNgay_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Ngày Upload :"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvNgayup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="5/11/2018 "
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNgay_cap_nhat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Ngày cập nhật :"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvNgaycapnhat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="06/11/2018"
                        android:textColor="@color/colorTieuDeTruyen"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNoi_dung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="Nội dung :"
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/sizeChu" />

                    <TextView
                        android:id="@+id/tvNoidung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:text="góc này chém gió nha chém dài ra nhiều nhiều cho đẹp trên 50 từ..."
                        android:textColor="@color/colorNavText"
                        android:textSize="@dimen/sizeChu" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnDoc_truyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginLeft"
                    android:background="@drawable/bgnutdoctruyen"
                    android:padding="5dp"
                    android:text="Đọc Truyện"
                    android:textColor="@color/colorNavText"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>

        <!--<android.support.design.widget.BottomNavigationView-->
            <!--android:id="@+id/navigation"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/bgbotombar"-->
            <!--app:itemIconTint="@color/colorNavIcon"-->
            <!--app:itemTextColor="@color/colorNavText"-->
            <!--app:menu="@menu/navigation">-->

        <!--</android.support.design.widget.BottomNavigationView>-->
    </LinearLayout>
</LinearLayout>
